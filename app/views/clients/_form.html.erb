<%# app/views/clients/_form.html.erb %>
<%= form_with(model: client, local: true) do |f| %>
    <% if client.errors.any? %>
        <div id="error_explanation" style="color: red;">
        <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
    
        <ul>
            <% client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
    
    <div class="grid gap-2 mb-6 md:grid-cols-2">
        <div class="field">
            <%= f.label :first_name, class: "block mb-2 text-sm font-medium text-gray-900 capitalize" %>
            <%= f.text_field :first_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
        </div>
        
        <div class="field">
            <%= f.label :last_name, class: "block mb-2 text-sm font-medium text-gray-900 capitalize" %>
            <%= f.text_field :last_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
        </div>

        <div class="field">
            <%= f.label :phone , class: "block mb-2 text-sm font-medium text-gray-900 capitalize"%>
            <%= f.telephone_field :phone, placeholder: "123-45-678", pattern: "[0-9]{3}-[0-9]{2}-[0-9]{3}", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
        </div>
    </div>

    <div class="field mb-6">
        <%= f.label :email_address, class: "block mb-2 text-sm font-medium text-gray-900 capitalize" %>
        <%= f.email_field :email, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"%>
    </div>
    
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>